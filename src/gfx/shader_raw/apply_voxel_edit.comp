#version 430

layout(binding = 1, std430) buffer Voxels {
   uint atoms[];
};

layout(binding = 2, std430) buffer VoxelEdits {
   uvec2 edits[];
};

void main() {
   uint i = gl_GlobalInvocationID.x;
   if (i >= edits.length()) return;

   uint offset = edits[i].x;
   uint new_atom = edits[i].y;

   atoms[offset] = new_atom;
}